FROM alpine

#set $ENV
ENV ENV=/etc/profile
#copy aliases definition

RUN { \
    echo "alias ll='ls -la'"; \
    echo "alias t='top'"; \
    echo "alias os='uname -a'"; \
    echo "alias c='clear'"; \
	} > /etc/profile.d/alias.sh
